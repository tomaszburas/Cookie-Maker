<div class="summary-center-container">
    {{#if cookieData.base}}
        <div class="summary-box-left">
            <h1 class="big-txt">Summary</h1>
            {{> summary-basket}}
            <div class="coupon-box">
                {{> coupon}}
            </div>
            <div class="basket-navigation-box">
                {{> go-home}}
                {{> go-order}}
            </div>

        </div>
        <div class="summary-box-right">
            <h1 class="big-txt">Preview cookie</h1>
            {{> cookie-preview}}
        </div>
    {{else}}
        <div class="basket-box">
            <h1 class="big-txt">Your shopping cart is empty 🙁</h1>
            {{> go-home}}
        </div>

    {{/if}}
</div>

<script type="module" src="/assets/js/basket.js"></script>
